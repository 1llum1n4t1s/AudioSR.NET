<Window x:Class="AudioSR.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioSR.NET"
        mc:Ignorable="d"
        Title="AudioSR.NET - オーディオ超解像ツール" Height="600" Width="900" Icon="icon/app.ico"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 初期化オーバーレイパネル -->
        <Grid x:Name="InitializeOverlayPanel" Grid.Row="0" Grid.RowSpan="3" Background="#90000000" Visibility="Collapsed" Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <TextBlock Text="AudioSR.NET を初期化中..." FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock x:Name="InitializeStatusText" Text="依存パッケージをインストール中..." Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar x:Name="InitializeProgressBar" Height="30" Value="0" Maximum="100" Background="#CCCCCC" Margin="20,0"/>
                <TextBlock x:Name="InitializeProgressText" Text="0/10" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="12"/>
            </StackPanel>
        </Grid>

        <!-- 処理実行中オーバーレイパネル -->
        <Grid x:Name="ProcessingOverlayPanel" Grid.Row="0" Grid.RowSpan="3" Background="#90000000" Visibility="Collapsed" Panel.ZIndex="998">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
                <TextBlock Text="AudioSR 処理を実行中..." FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                
                <TextBlock x:Name="ProcessingFileText" Text="ファイル名..." Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,5" FontSize="14"/>
                <TextBlock x:Name="ProcessingStatusText" Text="準備中..." Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,15" FontSize="12"/>
                
                <ProgressBar x:Name="ProcessingProgressBar" Height="30" Value="0" Maximum="100" Background="#CCCCCC" Margin="40,0"/>
                
                <Grid Margin="40,10,40,0">
                    <TextBlock x:Name="ProcessingDetailText" Text="ステップ: 0/100" Foreground="White" HorizontalAlignment="Left" FontSize="12"/>
                    <TextBlock x:Name="ProcessingOverallText" Text="全体進捗: 0/0" Foreground="White" HorizontalAlignment="Right" FontSize="12"/>
                </Grid>

                <Button Content="処理を中断" Width="120" Height="35" Margin="0,30,0,0" Click="StopProcessing_Click" 
                        Background="#FF4444" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 設定パネル -->
        <GroupBox Header="設定" Grid.Row="0" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Python設定：プロジェクト内Pythonを使用するためUI削除 -->

                <!-- モデル設定 -->
                <Label Content="モデル:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <ComboBox x:Name="cmbModel" Grid.Row="1" Grid.Column="1" Margin="5" SelectedItem="{Binding ModelName}">
                    <ComboBoxItem Content="basic (一般音声・音楽)"/>
                    <ComboBoxItem Content="speech (音声特化)"/>
                </ComboBox>

                <!-- 処理設定 -->
                <Label Content="DDIMステップ(値が大きいほど高品質):" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                    <Slider x:Name="sliderDdimSteps" Minimum="10" Maximum="100" Width="150" Value="{Binding DdimSteps}" Margin="5"/>
                    <TextBlock Text="{Binding Value, ElementName=sliderDdimSteps}" VerticalAlignment="Center"/>
                </StackPanel>

                <Label Content="ガイダンススケール(値が高いほど特徴的):" Grid.Row="2" Grid.Column="2" Margin="5"/>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="3">
                    <Slider x:Name="sliderGuidanceScale" Minimum="1" Maximum="10" Width="150" Value="{Binding GuidanceScale}" TickFrequency="0.5" Margin="5"/>
                    <TextBlock Text="{Binding Value, ElementName=sliderGuidanceScale}" VerticalAlignment="Center"/>
                </StackPanel>

                <Label Content="乱数シード(同じ値で再現性あり):" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                    <TextBox x:Name="txtSeed" Width="100" IsEnabled="{Binding IsSeedEnabled}" Margin="5">
                        <TextBox.Text>
                            <Binding Path="Seed" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True" NotifyOnValidationError="True">
                                <Binding.ValidationRules>
                                    <local:SeedValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                        <TextBox.ToolTip>
                            <TextBlock>
                                ・0〜9223372036854775807の整数値を設定可能
                                ・同じ値を使うと同じ結果が得られます
                                ・好みの結果が得られたら値をメモしておくと同じ効果を再現できます
                                ・特に指定がなければランダムチェックボックスをオンにしてください
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <CheckBox Content="ランダム" IsChecked="{Binding UseRandomSeed}" Margin="5" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 出力先設定 -->
                <Label Content="出力フォルダ:" Grid.Row="3" Grid.Column="2" Margin="5"/>
                <Grid Grid.Row="3" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtOutputFolder" Grid.Column="0" Text="{Binding OutputFolder}" Margin="5"/>
                    <Button Content="参照..." Grid.Column="1" Margin="5" Click="BrowseOutputFolder_Click"/>
                </Grid>

                <Label Content="上書き:" Grid.Row="4" Grid.Column="2" Margin="5"/>
                <CheckBox Content="出力ファイルを上書きする" Grid.Row="4" Grid.Column="3" Margin="5"
                          IsChecked="{Binding OverwriteOutputFiles}"/>
            </Grid>
        </GroupBox>

        <!-- ファイルリスト -->
        <GroupBox Header="ファイルリスト" Grid.Row="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView x:Name="lvFiles" Grid.Row="0" ItemsSource="{Binding FileList}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ファイル名" DisplayMemberBinding="{Binding Name}" Width="180"/>
                            <GridViewColumn Header="パス" DisplayMemberBinding="{Binding Path}" Width="Auto"/>
                            <GridViewColumn Header="ステータス" DisplayMemberBinding="{Binding Status}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ファイル追加" Margin="5" Click="AddFiles_Click"/>
                    <Button Content="削除" Margin="5" Click="RemoveFiles_Click"/>
                    <Button Content="リストクリア" Margin="5" Click="ClearFiles_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 操作ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="設定保存" Width="100" Margin="5" Click="SaveSettings_Click"/>
            <Button Content="処理開始" Width="100" Margin="5" Click="StartProcessing_Click"/>
            <Button Content="処理停止" Width="100" Margin="5" Click="StopProcessing_Click"/>
            <Button Content="ランタイム再試行" Width="120" Margin="5" Click="RetryEmbeddedPython_Click"/>
            <Button Content="ヘルプ表示" Width="100" Margin="5" Click="ShowEmbeddedPythonHelp_Click"/>
        </StackPanel>
    </Grid>
</Window>
